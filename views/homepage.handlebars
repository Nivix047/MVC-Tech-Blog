{{#each projects as |project|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2><a href="/project/{{project.id}}">{{project.name}}</a></h2>
      <p>Created by {{project.user.name}} on {{project.date_created}}</p>
      <p>{{project.description}}</p>
    </div>
    <div class="col-md-6">
      <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
    </div>
  </div>
{{/each}}