<div class="container">
  {{#each posts}}
    <div
      class="row m-5 border border-dark bg-secondary text-white"
      id="userpost"
    >
      <div class="col text-left">
        <a
          href="/post/{{id}}"
          class="text-decoration-none text-white"
        >{{title}}</a>
      </div>
      <div class="col text-center">
        {{date_created}}
      </div>
    </div>
  {{/each}}
</div>

