<div>
  <form class="form update-form">
    <div class="form-group">
      <label for="update-title">Title</label>
      <input
        class="form-input"
        type="text"
        id="update-title"
        value="{{title}}"
      />
    </div>
    <div class="form-group">
      <label for="update-post">Content</label>
      <input class="form-input" type="text" id="update-post" />
    </div>
    <div class="form-group">
      <button class="btn btn-secondary" type="submit">Update Post</button>
    </div>
  </form>
  <button
    class="btn btn-secondary"
    data-id="{{post.id}}"
    id="delete-btn"
  >Delete</button>
</div>