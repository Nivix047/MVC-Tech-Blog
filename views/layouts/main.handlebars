<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MVC Tech blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="display-flex justify-space-between align-center p-2">
      <nav class="ps-5 pb-3" style="background-color:black">
        {{#if logged_in}}
          <a href="/dashboard" class="dashboard m-3">Dashboard</a>
          {{! Conditionally render login or logout links }}
          <button class="logout btn">Logout</button>
        {{else}}
          <a href="/login" id="login">Login</a>
        {{/if}}
      </nav>
      <div class="jumbotron jumbotron-fluid text-center">
        <h1 class="header display-4" id="header-title">
          The Tech Blog
        </h1>
      </div>
    </header>
    <main class="container container-fluid m-6 p-5" id="main-container">
      {{! Render the sub layout }}
      {{{body}}}
    </main>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>